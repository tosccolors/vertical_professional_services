<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="group_planning_forecasting" model="res.groups">
            <field name="name">Planning &amp; Forecasting</field>
            <field name="category_id" ref="base.module_category_usability" />
        </record>
        <record id="group_ps_reports" model="res.groups">
            <field name="name">Professional Services Reporting</field>
            <field name="category_id" ref="base.module_category_usability" />
            <field
                name="implied_ids"
                eval="[(4, ref('ps_timesheet_invoicing.group_planning_forecasting'))]"
            />
        </record>
        <record id="group_timesheet_manager" model="res.groups">
            <field name="name">Timesheet ManagerX</field>
            <field name="category_id" ref="base.module_category_services_timesheets" />
        </record>
        <record model="ir.module.category" id="module_category_ps_planning">
            <field name="name">Planning</field>
            <field name="description">Helps you manage planning.</field>
            <field name="sequence">14</field>
        </record>
        <record id="group_ps_planning_user" model="res.groups">
            <field name="name">Employee</field>
            <field
                name="category_id"
                ref="ps_timesheet_invoicing.module_category_ps_planning"
            />
            <field name="users" eval="[(4, ref('base.user_root'))]" />
        </record>
        <record id="group_ps_planning_officer" model="res.groups">
            <field name="name">Officer</field>
            <field
                name="category_id"
                ref="ps_timesheet_invoicing.module_category_ps_planning"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('ps_timesheet_invoicing.group_ps_planning_user'))]"
            />
        </record>
        <record id="group_chargecode_time_admin" model="res.groups">
            <field name="name">Time Admin</field>
            <field name="category_id" ref="base.module_category_usability" />
        </record>
        <record model="ir.rule" id="timesheet_manager">
            <field name="name">Timesheet ManagerX</field>
            <field
                name="model_id"
                search="[('model','=','hr_timesheet.sheet')]"
                model="ir.model"
            />
            <field name="global" eval="True" />
            <field
                name="groups"
                eval="[(4,ref('ps_timesheet_invoicing.group_timesheet_manager'))]"
            />
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
        <!-- default settings /-->
        <record id="base.user_admin" model="res.users">
            <field
                name="groups_id"
                eval="[(4, ref('analytic.group_analytic_accounting')), (4, ref('account.group_account_user')), (4, ref('group_ps_planning_officer')), (4, ref('group_ps_planning_officer')), (4, ref('group_timesheet_manager')), (4, ref('ps_project.group_ps_invoicing')), (4, ref('group_chargecode_time_admin')), (4, ref('group_planning_forecasting'))]"
            />
        </record>
    </data>
</odoo>
