<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Inherited crm.lead (as Opportunity) views -->
        <record id="crm_case_form_view_oppor_inherited" model="ir.ui.view">
            <field name="name">crm.lead.form.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[1]" position="before">
                        <button
                            name="recalculate_total"
                            string="Re-calculate total"
                            type="object"
                            attrs="{'invisible': [('show_button', '=', False)]}"
                        />
                        <group
                            string="Monthly Expected Revenue"
                            attrs="{'invisible': [('expected_revenue', '=', 0)]}"
                        >
                            <group>
                                <field name="start_date" />
                            </group>
                            <group>
                                <field name="end_date" />
                                <field name="latest_revenue_date" invisible="1" />
                                <field name="show_button" invisible="1" />
                            </group>
                        </group>
                        <div attrs="{'invisible': [('expected_revenue', '=', 0)]}">
                            <field name='id' invisible='True' />
                            <field
                                name="monthly_revenue_ids"
                                context="{'default_lead_id':active_id, 'default_percentage': probability}"
                                attrs="{'readonly': [('id','=', False )]}"
                            >
                                <tree
                                    editable="bottom"
                                    create="true"
                                    default_order="date"
                                    colors="grey:computed_line==True;"
                                >
                                    <field name="project_id" invisible="1" />
                                    <field name="partner_id" invisible="1" />
                                    <field name="industry_id" invisible="1" />
                                    <field name="year" invisible="1" />
                                    <field name="department_id" invisible="1" />
                                    <field name="month" readonly="1" />
                                    <field name="date" />
                                    <field name="latest_revenue_date" invisible="1" />
                                    <field name="computed_line" invisible="1" />
                                    <field name="no_of_days" readonly="1" />
                                    <field name="company_currency" invisible="1" />
                                    <field
                                        name="weighted_revenue"
                                        readonly="1"
                                        widget="monetary"
                                        options="{'currency_field': 'company_currency'}"
                                        sum="Total"
                                    />
                                    <field
                                        name="expected_revenue"
                                        widget="monetary"
                                        options="{'currency_field': 'company_currency'}"
                                        sum="Total"
                                    />
                                    <field name="percentage" />
                                </tree>
                            </field>
                        </div>
                    </xpath>
                    <xpath expr="//field[@name='date_deadline']" position="after">
                        <field name="project_id" />
                    </xpath>
                    <xpath expr="//h1" position="after">
                        <h2>
                            <field name="subject" placeholder="Subject" />
                        </h2>
                    </xpath>
                    <xpath expr="//field[@name='user_id']" position="after">
                        <field name="operating_unit_id" />
                    </xpath>
                    <xpath expr="(//field[@name='name'])/../.." position="before">
                        <group>
                            <div class="pull-right">
                                <field name="contract_signed" />
                                <label for="contract_signed" />
                            </div>
                        </group>
                    </xpath>
                    <field name="tag_ids" position="attributes">
                        <attribute name="invisible">True</attribute>
                    </field>
                    <xpath expr="//field[@name='team_id']" position="after">
                        <field name="dept_ou_domain" invisible="1" />
                        <field name="department_id" domain="dept_ou_domain" />
                        <field
                            name="tag_ids"
                            string="Proposition"
                            widget="many2many_tags"
                        />
                    </xpath>
                    <xpath expr="//field[@name='team_id']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//h2/div[2]" position="after">
                        <div>
                            <label
                                for="expected_duration"
                                class="oe_edit_only"
                                invisible="1"
                            />
                            <div class="o_row">
                                <field name="expected_duration" invisible="1" />
                            </div>
                        </div>
                    </xpath>
                    <!-- added row no-gutters d-flex to above xpath -->
                    <xpath
                        expr="//sheet/group/group/field[@name='partner_id']"
                        position="after"
                    >
                        <field
                            name="partner_contact_id"
                            string="Contact Person"
                            context="{'default_parent_id': partner_id}"
                            domain="[('is_company', '=', False),('parent_id', '=', partner_id),('type', '=', 'contact')]"
                        />
                    </xpath>
                    <xpath expr="//notebook" position="inside">
                        <page string="Revenue Split">
                            <field name="revenue_split_ids">
                                <tree editable="bottom">
                                    <field name="month" readonly="1" />
                                    <field name="total_revenue" readonly="1" />
                                    <field name="total_revenue_per" readonly="1" />
                                    <field name="ps_blue_bv_amount" readonly="1" />
                                    <field name="ps_blue_bv_per" />
                                    <field name="ps_red_bv_amount" readonly="1" />
                                    <field name="ps_red_bv_per" />
                                    <field name="ps_green_bv_amount" readonly="1" />
                                    <field name="ps_green_bv_per" />
                                    <field name="ps_black_bv_amount" readonly="1" />
                                    <field name="ps_black_bv_per" />
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
                <xpath
                    expr="//sheet/group/group/field[@name='user_id']"
                    position="before"
                >
                    <field
                        name="industry_id"
                        placeholder="Sector"
                        options="{&quot;no_open&quot;: True}"
                        attrs="{'invisible': [('type', '=', 'opportunity')]}"
                    />
                    <field
                        name="secondary_industry_ids"
                        widget="many2many_tags"
                        attrs="{'invisible': [('type', '=', 'opportunity')]}"
                    />
                </xpath>
            </field>
        </record>
        <!-- Inherited crm.lead list view (as Lead) -->
        <record id="crm_case_tree_view_leads_inherited_ps" model="ir.ui.view">
            <field name="name">crm.lead.tree.lead</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='contact_name']" position="before">
                    <field name="partner_name" string="Company Name" />
                </xpath>
                <xpath expr="//field[@name='contact_name']" position="after">
                    <!-- <field name="next_activity_id"/>  -->
                    <!-- commented -->
                    <!-- <field name="date_action"/> -->
                </xpath>
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='phone']" position="after">
                    <field name="mobile" />
                    <field name="city" />
                    <field name="country_id" />
                    <field name="user_id" />
                </xpath>
                <xpath expr="//field[@name='team_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <!-- Inherited crm.lead list view (as Opportunity) -->
        <record id="crm_case_tree_view_oppor_ps" model="ir.ui.view">
            <field name="name">crm.lead.tree.opportunity</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="partner_id" position="after">
                    <field name="partner_name" string="Potential customer" />
                    <field name="partner_contact_id" invisible="1" />
                </field>
                <field name="country_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="user_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="probability" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="stage_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="team_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="name" position="attributes">
                    <attribute name="string">Topic</attribute>
                </field>
                <field name="partner_name" position="after">
                    <field name="date_deadline" />
                    <field name="prorated_revenue" />
                    <field name="priority" />
                    <field name="probability" />
                    <field name="user_id" string="Owner" />
                    <field name="department_id" string="Practice" />
                    <field name="tag_ids" string="Proposition" />
                    <field name="stage_id" />
                </field>
                <field name="create_date" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>
        <!-- Inherited crm_industry module crm.lead list view (as Opportunity) -->
        <record id="crm_case_tree_view_oppor_sector_ps" model="ir.ui.view">
            <field name="name">Remove sector field from tree view</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm_industry.crm_case_tree_view_oppor" />
            <field name="arch" type="xml">
                <field name="industry_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>
        <!--Monthly Revenue form view-->
        <record id="crm_monthly_revenue_form_view" model="ir.ui.view">
            <field name="name">crm.monthly.revenue.form</field>
            <field name="model">crm.monthly.revenue</field>
            <field name="arch" type="xml">
                <form string="Monthly Revenue">
                    <sheet>
                        <group>
                            <group>
                                <field name="lead_id" readonly="1" />
                                <field name="partner_id" readonly="1" />
                                <field name="industry_id" readonly="1" />
                                <field name="year" readonly="1" />
                                <field name="month" readonly="1" />
                                <field name="no_of_days" readonly="1" />
                                <field name="project_id" readonly="1" />
                            </group>
                            <group>
                                <field
                                    name="weighted_revenue"
                                    readonly="1"
                                    widget="monetary"
                                    options="{'currency_field': 'company_currency'}"
                                />
                                <field
                                    name="expected_revenue"
                                    readonly="1"
                                    widget="monetary"
                                    options="{'currency_field': 'company_currency'}"
                                />
                                <field
                                    name="percentage"
                                    widget="percentpie"
                                    readonly="1"
                                />
                                <field name="company_currency" readonly="1" />
                                <field name="user_id" readonly="1" />
                                <field
                                    name="department_id"
                                    readonly="1"
                                    string="Practice"
                                />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Monthly Revenue tree view-->
        <record id="crm_monthly_revenue_tree_view" model="ir.ui.view">
            <field name="name">crm.monthly.revenue.tree</field>
            <field name="model">crm.monthly.revenue</field>
            <field name="arch" type="xml">
                <tree string="Monthly Revenue">
                    <field name="lead_id" />
                    <field name="partner_id" />
                    <field name="industry_id" />
                    <field name="year" />
                    <field name="month" />
                    <field name="no_of_days" />
                    <field name="project_id" />
                    <field name="department_id" string="Practice" />
                    <field
                        name="weighted_revenue"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                    <field
                        name="expected_revenue"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                    <field name="percentage" widget="integer" />
                    <field name="company_currency" invisible="1" />
                    <field name="user_id" invisible="1" />
                </tree>
            </field>
        </record>
        <!-- Monthly Revenue pivot View -->
        <record id="crm_monthly_revenue_view_pivot" model="ir.ui.view">
            <field name="name">crm.monthly.revenue.pivot</field>
            <field name="model">crm.monthly.revenue</field>
            <field name="arch" type="xml">
                <pivot string="Monthly Revenue Analysis">
                    <field name="lead_id" type="row" />
                    <field name="date" interval="year" type="col" />
                    <field
                        name="expected_revenue"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                    <field
                        name="weighted_revenue"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                </pivot>
            </field>
        </record>
        <!-- Monthly Revenue Graph View -->
        <record id="crm_monthly_revenue_view_graph" model="ir.ui.view">
            <field name="name">crm.monthly.revenue.graph</field>
            <field name="model">crm.monthly.revenue</field>
            <field name="arch" type="xml">
                <graph string="Monthly Revenue Analysis" stacked="True">
                    <field name="lead_id" type="row" />
                    <field name="date" interval="year" type="col" />
                    <field
                        name="expected_revenue"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                </graph>
            </field>
        </record>
        <!--Monthly Revenue action-->
        <record id="crm_monthly_revenue_report_action" model="ir.actions.act_window">
            <field name="name">Monthly Revenue Analysis</field>
            <field name="res_model">crm.monthly.revenue</field>
            <field name="view_mode">pivot,graph,tree,form</field>
        </record>
        <!--Monthly Revenue split tree view-->
        <record id="crm_monthly_revenue_split_tree_view" model="ir.ui.view">
            <field name="name">crm.revenue.split.tree</field>
            <field name="model">crm.revenue.split</field>
            <field name="arch" type="xml">
                <tree string="Monthly Revenue Split">
                    <field name="lead_id" />
                    <field name="month" />
                    <field name="total_revenue" />
                    <field name="total_revenue_per" />
                    <field name="ps_blue_bv_amount" />
                    <field name="ps_blue_bv_per" />
                    <field name="ps_red_bv_amount" />
                    <field name="ps_red_bv_per" />
                    <field name="ps_green_bv_amount" />
                    <field name="ps_green_bv_per" />
                    <field name="ps_black_bv_amount" />
                    <field name="ps_black_bv_per" />
                </tree>
            </field>
        </record>
        <!-- Monthly Revenue split pivot View -->
        <record id="crm_monthly_revenue_split_view_pivot" model="ir.ui.view">
            <field name="name">crm.revenue.split.pivot</field>
            <field name="model">crm.revenue.split</field>
            <field name="arch" type="xml">
                <pivot string="Monthly Revenue Analysis">
                    <field name="lead_id" type="row" />
                    <!--<field name="month" type="col"/>-->
                    <field
                        name="total_revenue"
                        string="Revenue Split"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                    <field
                        name="ps_blue_bv_amount"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                    <field
                        name="ps_red_bv_amount"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                    <field
                        name="ps_green_bv_amount"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                    <field
                        name="ps_black_bv_amount"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                </pivot>
            </field>
        </record>
        <!-- Monthly Revenue Split Graph View -->
        <record id="crm_monthly_revenue_split_view_graph" model="ir.ui.view">
            <field name="name">crm.revenue.split.graph</field>
            <field name="model">crm.revenue.split</field>
            <field name="arch" type="xml">
                <graph string="Monthly Revenue Split Analysis" stacked="True">
                    <field name="lead_id" type="row" />
                    <field name="month" type="col" />
                    <field
                        name="total_revenue"
                        type="measure"
                        widget="monetary"
                        options="{'currency_field': 'company_currency'}"
                    />
                </graph>
            </field>
        </record>
        <!-- Monthly Revenue split Search View -->
        <record id="crm_monthly_revenue_split_search_view" model="ir.ui.view">
            <field name="name">crm.revenue.split.search</field>
            <field name="model">crm.revenue.split</field>
            <field name="arch" type="xml">
                <search string="Monthly Revenue Split Analysis">
                    <field name="lead_id" />
                    <field name="month" />
                    <field name="total_revenue" />
                    <field name="total_revenue_per" />
                    <field name="ps_blue_bv_amount" />
                    <field name="ps_blue_bv_per" />
                    <field name="ps_red_bv_amount" />
                    <field name="ps_red_bv_per" />
                    <field name="ps_green_bv_amount" />
                    <field name="ps_green_bv_per" />
                    <field name="ps_black_bv_amount" />
                    <field name="ps_black_bv_per" />
                    <field name="department_id" />
                    <field name="operating_unit_id" />
                    <group expand="1" string="Group By">
                        <filter
                            string="Operating Unit"
                            name='operating_unit_id'
                            context="{'group_by':'operating_unit_id'}"
                        />
                        <filter
                            string="Practice"
                            name='department_id'
                            context="{'group_by':'department_id'}"
                        />
                        <filter
                            string="Customer"
                            name='partner_id'
                            context="{'group_by':'partner_id'}"
                        />
                        <filter
                            string="Project"
                            name='project_id'
                            context="{'group_by':'project_id'}"
                        />
                        <filter
                            string="Opportunity"
                            name='name'
                            context="{'group_by':'name'}"
                        />
                        <filter
                            string="Salesperson"
                            name='user_id'
                            context="{'group_by':'user_id'}"
                        />
                    </group>
                </search>
            </field>
        </record>
        <!--Monthly Revenue split action-->
        <record
            id="crm_monthly_revenue_split_report_action"
            model="ir.actions.act_window"
        >
            <field name="name">Monthly Revenue Split Analysis</field>
            <field name="res_model">crm.revenue.split</field>
            <field name="view_mode">pivot,graph,tree,form</field>
        </record>
        <record model="ir.ui.view" id="crm_case_form_view_leads_magnus">
            <field name="name">Update sector field</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm_industry.crm_lead_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='industry_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath
                    expr="//field[@name='secondary_industry_ids']"
                    position="attributes"
                >
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_create_opportunity_simplified_inherit">
            <field name="name">crm.lead.quick.view</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.quick_create_opportunity_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="operating_unit_id" />
                    <field name="department_id" />
                    <field
                        name="tag_ids"
                        string="Proposition"
                        widget="many2many_tags"
                    />
                    <field name="date_deadline" string="Expected Closing Date" />
                </xpath>
                <label for="expected_revenue" position="attributes">
                    <attribute name="string">Expected Revenue + Probability</attribute>
                </label>
                <xpath expr="//field[@name='expected_revenue']" position="after">
                    <field name="probability" />
                </xpath>
            </field>
        </record>
        <record id="crm.crm_lead_all_leads" model="ir.actions.act_window">
            <field name="context">
                {'default_type':'lead', 'search_default_type': 'lead',
                'needaction_menu_ref': 'crm.menu_crm_opportunities',
                'search_default_to_process':1}
            </field>
        </record>
        <record id="crm.crm_lead_opportunities" model="ir.actions.act_window">
            <field name="context">
                {'default_type': 'opportunity', 'default_user_id': uid,
                'search_default_assigned_to_me': 1}
            </field>
        </record>
        <record model="ir.ui.view" id="crm_stage_form_inherit">
            <field name="name">crm.stage</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_form" />
            <field name="arch" type="xml">
                <field name="fold" position="after">
                    <field name="show_when_changing" />
                </field>
            </field>
        </record>
    </data>
</odoo>
